<% provide(:title, 'Brugere') %>
<h1>Alle brugere</h1>

<!-- # TODO: Lav noget smartere, end med if-statement, se usersController -->
<ul class="users">
  <% @users.each do |user| %>
      <li>
        <%= link_to user.email, user %>
        <% if current_user.admin? && !current_user?(user) %>
          | <%= link_to "slet", user, method: :delete,
                                      data: {confirm: "Er du sikker?" } %>
        <% end %>
      </li>
  <% end %>
</ul>